{
  "manifest_version": 3,
  "name": "Pace",
  "version": "1.0.0",
  "description": "Automatically shows public transit commute times on StreetEasy apartment listings",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://streeteasy.com/*",
    "https://api.geoapify.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://streeteasy.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
